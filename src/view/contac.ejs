<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="tarjetas.css">
    <title>Contactame</title>
    <%- include('partials/head') %>
</head>
<body>
    <%- include('partials/nav') %>
    <section class="dark">
    <div class="container vh-100 d-flex justify-content-center align-items-center">
        <div class="card bg-dark text-white text-center">
            <div class="card-header">
                <h3>Contactame</h3>
            </div>
            <div class="card-body text-start">
                <form action="/enviar-mail" method="POST">
                    <div class="mb-3">
                      <label for="email">Email:</label>
                      <input class="form-control" name="mail" type="text" placeholder="Email" autofocus/>
                    </div>
                    <div class="mb-3">
                      <label for="message">Message:</label>
                      <textarea
                        class="form-control"
                        name="msm"
                        cols="30"
                        rows="10"
                        placeholder="Message"
                      ></textarea>
                    </div>
                    <button class="btn btn-primary btn-block" onclick="envio(1)">Enviar</button>
                  </form>
            </div>
        </div>
    </div>
  </section>
    <%- include('partials/javascrip') %>

    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js/alert.js"></script>
</body>
</html>